<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Main colors-->
        <item name="attr_color_primary">@color/colorPrimary</item>
        <item name="attr_color_primary_dark">@color/colorPrimaryDark</item>
        <item name="attr_color_accent">@color/colorAccent</item>

        <!--TextColors-->
        <item name="attr_primaryText">@color/primaryText</item>
        <item name="attr_secondaryText">@color/secondaryText</item>
        <item name="attr_hintText">@color/hintText</item>

        <item name="attr_fitsSystemWindows_main_activity">true</item>
        <item name="attr_background">@color/colorBackground</item>

        <!--Chat bubbles-->
        <item name="attr_bubbleMy">@drawable/bubble_my</item>
        <item name="attr_bubbleMyEncr">@drawable/bubble_my_encr</item>
        <item name="attr_bubbleMyHide">@drawable/bubble_my_hide</item>

        <item name="attr_bubbleOppo">@drawable/bubble_oppo</item>
        <item name="attr_bubbleOppoEncr">@drawable/bubble_oppo_encr</item>
        <item name="attr_bubbleOppoHide">@drawable/bubble_oppo_hide</item>

        <!--To change the background of options menu-->
        <item name="attr_itemBackground">@color/colorItemBackground</item>

