        <!--Set attributes-->
        <item name="colorPrimary">?attr/attr_color_primary</item>
        <item name="colorPrimaryDark">?attr/attr_color_primary_dark</item>
        <item name="colorAccent">?attr/attr_color_accent</item>
        <item name="android:itemBackground">?attr/attr_itemBackground</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GroupChatTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <!--Views-->
    <style name="ChiStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="ButtonPrimaryStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/attr_color_primary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--TextView-->
    <style name="TvRegular">
        <item name="android:textColor">?attr/attr_primaryText</item>
        <item name="android:textColorHint">?attr/attr_hintText</item>
        <item name="android:textSize">@dimen/txt_size_regular</item>
    </style>

    <style name="TvCaption">
        <item name="android:textColor">?attr/attr_color_accent</item>
        <item name="android:textSize">@dimen/txt_size_caption</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvLarge">
        <item name="android:textColor">?attr/attr_primaryText</item>
        <item name="android:textSize">@dimen/txt_size_large</item>
    </style>

    <style name="TvChatStyle">
        <item name="android:textColor">?attr/attr_primaryText</item>
        <item name="android:textSize">@dimen/txt_size_medium</item>
    </style>

    <style name="TvChatOppoStyle">
        <item name="android:textColor">?attr/attr_primaryText</item>
        <item name="android:textSize">@dimen/txt_size_medium</item>
    </style>

    <style name="TvChatDateStyle">
        <item name="android:textColor">?attr/attr_hintText</item>
        <item name="android:textSize">@dimen/txt_size_caption</item>
        <item name="android:alpha">0.65</item>
    </style>

</resources>
