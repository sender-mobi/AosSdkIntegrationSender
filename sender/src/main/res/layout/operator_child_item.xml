<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/opc_vertical_padding"
    android:paddingLeft="@dimen/opc_image_size"
    android:paddingStart="@dimen/opc_image_size"
    android:paddingTop="@dimen/opc_vertical_padding">

    <TextView
        android:id="@+id/opc_child_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        tools:text="Светлана Марковна"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/opc_badge"
        android:layout_toStartOf="@+id/opc_badge"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/TvLarge"/>

    <TextView
        android:id="@+id/opc_badge"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_circle"
        android:gravity="center"
        android:textColor="@android:color/white"
        tools:text="24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>