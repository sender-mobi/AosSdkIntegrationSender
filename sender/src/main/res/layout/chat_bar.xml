<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_bar_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/chat_bar_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_plus_gray" />

    <ImageView
        android:id="@+id/chat_bar_attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_attachment" />

    <ImageView
        android:id="@+id/chat_bar_smile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_smile" />

    <EditText
        android:id="@+id/chat_bar_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:hint="@string/cht_your_message"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="3"
        android:textColorHint="@color/colorHint"
        android:textSize="@dimen/txt_size_regular"
        android:longClickable="true"
        android:textIsSelectable="true" />

    <ImageView
        android:id="@+id/chat_bar_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_mic" />

</LinearLayout>