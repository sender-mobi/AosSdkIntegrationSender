<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--sender style start-->
        <!--Main colors-->
        <item name="attr_color_primary">@color/colorPrimary</item>
        <item name="attr_color_primary_dark">@color/colorPrimaryDark</item>
        <item name="attr_color_accent">@color/colorAccent</item>

        <!--TextColors-->
        <item name="attr_primaryText">@color/primaryText</item>
        <item name="attr_secondaryText">@color/secondaryText</item>
        <item name="attr_hintText">@color/hintText</item>

        <item name="attr_fitsSystemWindows_main_activity">false</item>
        <item name="attr_background">@color/colorBackground</item>

        <!--Chat bubbles-->
        <item name="attr_bubbleMy">@drawable/bubble_my_dark</item>
        <item name="attr_bubbleMyEncr">@drawable/bubble_my_encr_dark</item>
        <item name="attr_bubbleMyHide">@drawable/bubble_my_hide_dark</item>

        <item name="attr_bubbleOppo">@drawable/bubble_oppo_dark</item>
        <item name="attr_bubbleOppoEncr">@drawable/bubble_oppo_encr_dark</item>
        <item name="attr_bubbleOppoHide">@drawable/bubble_oppo_hide_dark</item>

        <!--To change the background of options menu-->
        <item name="attr_itemBackground">@color/colorItemBackgroundDark</item>
        <!--sender style end-->
    </style>

</resources>
